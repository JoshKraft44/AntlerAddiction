  max-width: 240px;
  margin-left: auto;
  margin-right: auto;
}

.card--collection {
  width: 100%;
}

.collection-list.grid {
  justify-content: center;
  gap: 2rem;
}

@media (max-width: 749px) {
  .collection-list.grid {
    display: grid !important;
    grid-template-columns: 1fr 1fr !important;
    gap: 1rem !important;
    padding: 0 !important;
    max-width: 100% !important;
  }

  .collection-list__item {
    width: 100% !important;
    max-width: 100% !important;
    margin: 0 !important;
    padding: 0 !important;
    flex: none !important;
  }

  .card--collection {
    width: 100% !important;
    height: auto !important;
    transform: none !important;
  }

  .card__media {
    width: 100% !important;
    height: auto !important;
    aspect-ratio: 1 / 1 !important;
  }

  .card__media img {
    width: 100% !important;
    height: 100% !important;
    object-fit: cover !important;
  }
