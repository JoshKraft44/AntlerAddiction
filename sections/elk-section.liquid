<section id="antler-banner" class="antler-banner">
  <div class="antler-banner__carousel">
    {% for block in section.blocks %}
      <div class="antler-banner__slide" data-slide-index="{{ forloop.index0 }}">
        <div class="antler-banner__content">
          <h2 class="antler-banner__heading">
            {{ block.settings.heading | newline_to_br }}
          </h2>
          <p class="antler-banner__subtext">
            {{ block.settings.subtext }}
          </p>
          {% if block.settings.button_label != blank and block.settings.button_link != blank %}
            <a href="{{ block.settings.button_link }}" class="antler-banner__btn">
              {{ block.settings.button_label }}
            </a>
          {% endif %}
        </div>

        <div class="antler-banner__image-wrap">
          {% if block.settings.banner_image %}
            {{ block.settings.banner_image
              | image_url: width: 2400
              | image_tag:
                class: 'antler-banner__image',
                loading: 'lazy',
                widths: '600, 900, 1200, 1600, 2400',
                sizes: '75vw'
            }}
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>

  {% if section.blocks.size > 1 %}
    <button class="antler-banner__nav antler-banner__nav--prev" aria-label="Previous slide">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <polyline points="15 18 9 12 15 6"></polyline>
      </svg>
    </button>
    <button class="antler-banner__nav antler-banner__nav--next" aria-label="Next slide">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <polyline points="9 18 15 12 9 6"></polyline>
      </svg>
    </button>

    <div class="antler-banner__dots">
      {% for block in section.blocks %}
        <button class="antler-banner__dot{% if forloop.first %} active{% endif %}" 
                data-slide="{{ forloop.index0 }}"
                aria-label="Go to slide {{ forloop.index }}">
        </button>
      {% endfor %}
    </div>
  {% endif %}
</section>

<style>
  #antler-banner {
    position: relative;
    width: 100%;
    height: 480px;
    overflow: hidden;
  }

  .antler-banner__carousel {
    display: flex;
    width: 100%;
    height: 100%;
    transition: transform 0.5s ease-in-out;
  }

  .antler-banner__slide {
    display: flex;
    flex-direction: row;
    min-width: 100%;
    height: 100%;
  }

  /* ---- BEIGE CONTENT PANEL (~25%) ---- */
  .antler-banner__content {
    flex: 1 0 25%;
    background-color: #f5f0eb;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    padding: 40px 32px 40px 40px;
    gap: 16px;
    z-index: 1;
  }

  .antler-banner__heading {
    font-size: 28px;
    font-weight: 600;
    line-height: 1.2;
    color: #1a1a1a;
    margin: 0;
  }

  .antler-banner__subtext {
    font-size: 14px;
    line-height: 1.55;
    color: #4a4a4a;
    margin: 0;
  }

  .antler-banner__btn {
    display: inline-block;
    margin-top: 4px;
    padding: 12px 28px;
    background-color: transparent;
    color: #1a1a1a;
    border: 2px solid #1a1a1a;
    font-size: 13px;
    font-weight: 500;
    letter-spacing: 0.5px;
    text-decoration: none;
    border-radius: 4px;
    transition: background-color 0.2s ease, color 0.2s ease;
  }

  .antler-banner__btn:hover {
    background-color: #1a1a1a;
    color: #ffffff;
  }

  /* ---- IMAGE (~75%) ---- */
  .antler-banner__image-wrap {
    flex: 3 0 75%;
    overflow: hidden;
  }

  .antler-banner__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    display: block;
  }

  /* ---- NAVIGATION ARROWS ---- */
  .antler-banner__nav {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 48px;
    height: 48px;
    background-color: rgba(255, 255, 255, 0.9);
    border: none;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10;
    transition: background-color 0.2s ease;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  }

  .antler-banner__nav:hover {
    background-color: rgba(255, 255, 255, 1);
  }

  .antler-banner__nav--prev {
    left: 20px;
  }

  .antler-banner__nav--next {
    right: 20px;
  }

  .antler-banner__nav svg {
    color: #1a1a1a;
  }

  /* ---- DOTS INDICATOR ---- */
  .antler-banner__dots {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 8px;
    z-index: 10;
  }

  .antler-banner__dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.5);
    border: none;
    cursor: pointer;
    padding: 0;
    transition: background-color 0.3s ease;
  }

  .antler-banner__dot.active {
    background-color: rgba(255, 255, 255, 0.95);
  }

  /* ---- TABLET ---- */
  @media (max-width: 1024px) {
    .antler-banner__content {
      flex: 1 0 30%;
    }
    .antler-banner__image-wrap {
      flex: 1 0 70%;
    }
    #antler-banner {
      height: 400px;
    }
    .antler-banner__nav {
      width: 40px;
      height: 40px;
    }
    .antler-banner__nav--prev {
      left: 12px;
    }
    .antler-banner__nav--next {
      right: 12px;
    }
  }

  /* ---- MOBILE ---- */
  @media (max-width: 768px) {
    #antler-banner {
      height: auto;
    }
    .antler-banner__slide {
      flex-direction: column;
    }
    .antler-banner__image-wrap {
      flex: none;
      width: 100%;
      height: 260px;
    }
    .antler-banner__content {
      flex: none;
      width: 100%;
      align-items: center;
      text-align: center;
      padding: 32px 24px;
    }
    .antler-banner__nav {
      width: 36px;
      height: 36px;
    }
    .antler-banner__nav--prev {
      left: 8px;
    }
    .antler-banner__nav--next {
      right: 8px;
    }
    .antler-banner__dots {
      bottom: 280px;
    }
  }
</style>

<script>
  (function() {
    const carousel = document.querySelector('.antler-banner__carousel');
    const slides = document.querySelectorAll('.antler-banner__slide');
    const prevBtn = document.querySelector('.antler-banner__nav--prev');
    const nextBtn = document.querySelector('.antler-banner__nav--next');
    const dots = document.querySelectorAll('.antler-banner__dot');
    
    if (!carousel || slides.length <= 1) return;
    
    let currentIndex = 0;
    
    function goToSlide(index) {
      currentIndex = (index + slides.length) % slides.length;
      carousel.style.transform = `translateX(-${currentIndex * 100}%)`;
      
      dots.forEach((dot, i) => {
        dot.classList.toggle('active', i === currentIndex);
      });
    }
    
    if (prevBtn) {
      prevBtn.addEventListener('click', () => goToSlide(currentIndex - 1));
    }
    
    if (nextBtn) {
      nextBtn.addEventListener('click', () => goToSlide(currentIndex + 1));
    }
    
    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => goToSlide(index));
    });
  })();
</script>

{% schema %}
{
  "name": "Antler Banner Carousel",
  "max_blocks": 5,
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "banner_image",
          "label": "Banner image"
        },
        {
          "type": "textarea",
          "id": "heading",
          "label": "Heading (use Shift+Enter for line breaks)",
          "default": "Any Home,\nAny Vibe."
        },
        {
          "type": "textarea",
          "id": "subtext",
          "label": "Description",
          "default": "An easy, natural accent for mantles, tables, and shelves."
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label",
          "default": "Shop Elk Antlers"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Antler Banner Carousel",
      "blocks": [
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}