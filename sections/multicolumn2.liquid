{{ 'component-slider.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  .design-ideas-header {
    text-align: center;
    margin-bottom: 2rem;
  }
  
  .design-ideas-header h2 {
    font-family: 'Playfair Display', serif;
    font-weight: 900;
    font-size: 2.6rem;
    color: #4a3f2a;
    text-transform: uppercase;
    text-align: center;
    letter-spacing: 0.5px;
    border-bottom: 2px solid #c2a974;
    padding-bottom: 0.5rem;
    margin-bottom: 2rem;
    display: inline-block;
  }
  
  .design-ideas-description {
    text-align: center;
    max-width: 800px;
    margin: 0 auto 3rem;
    font-size: 1.6rem;
    line-height: 1.6;
    color: {{ section.settings.text_color }};
  }
  
  .image-gallery {
    display: grid;
    grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
    gap: {{ section.settings.grid_gap }}px;
    margin: 0 auto;
    max-width: {{ section.settings.max_width }}px;
  }
  
  .image-gallery__item {
    overflow: hidden;
    border-radius: {{ section.settings.image_border_radius }}px;
  }
  
  .image-gallery__image {
    width: 100%;
    height: auto;
    display: block;
    transition: transform 0.3s ease;
  }
  
  .image-gallery__image:hover {
    transform: scale(1.03);
  }

  @media screen and (max-width: 749px) {
    .image-gallery {
      grid-template-columns: repeat(2, 1fr); /* Always 2 columns on mobile */
      gap: {{ section.settings.grid_gap_mobile }}px;
    }
    
    .design-ideas-header h2 {
      font-size: 2rem;
    }
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div
    class="page-width section-{{ section.id }}-padding isolate{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
    {% if settings.animations_reveal_on_scroll %}
      data-cascade
    {% endif %}
  >
    <!-- Design Ideas Header Section -->
    <div class="design-ideas-header">
      <h2 class="title title--primary">
        {{ section.settings.title | default: 'Design ideas for your space' }}
      </h2>
    </div>
    
    <!-- Design Ideas Description -->
    <div class="design-ideas-description">
      <p>{{ section.settings.description | default: 'Antlers make amazing coffee table centerpieces, elegant shelf decor, unique wall hangings, stunning mantel displays, and beautiful natural accents for any room. Their organic shapes and textures add warmth and character to modern and rustic spaces alike.' }}</p>
    </div>
    
    <!-- Image Gallery - Now with 4 items -->
    <div class="image-gallery">
      {%- for i in (1..4) -%}
        {%- assign image_setting = 'image_' | append: i -%}
        <div class="image-gallery__item">
          {%- if section.settings[image_setting] != blank -%}
            {{
              section.settings[image_setting]
              | image_url: width: 1000
              | image_tag:
                loading: 'lazy',
                class: 'image-gallery__image'
            }}
          {%- else -%}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Image Gallery (4 Items)",
  "class": "section",
  "tag": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "title",
      "default": "Design ideas for your space",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "description",
      "default": "<p>Antlers make amazing coffee table centerpieces, elegant shelf decor, unique wall hangings, stunning mantel displays, and beautiful natural accents for any room.</p>",
      "label": "Description"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Image 1"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Image 2"
    },
    {
      "type": "image_picker",
      "id": "image_3",
      "label": "Image 3"
    },
    {
      "type": "image_picker",
      "id": "image_4",
      "label": "Image 4"
    },
    {
      "type": "range",
