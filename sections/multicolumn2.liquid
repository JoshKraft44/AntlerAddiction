      "min": 2,
      "max": 4,
      "step": 1,
      "default": 4,
      "label": "Columns on desktop",
      "info": "Recommended: 4 columns for best layout"
    },
    {
      "type": "range",
      "id": "grid_gap",
      "min": 0,
      "max": 50,
      "step": 2,
      "default": 20,
      "unit": "px",
      "label": "Image gap (desktop)"
    },
    {
      "type": "range",
      "id": "grid_gap_mobile",
      "min": 0,
      "max": 30,
      "step": 2,
      "default": 12,
      "unit": "px",
      "label": "Image gap (mobile)"
    },
    {
      "type": "range",
      "id": "image_border_radius",
      "min": 0,
      "max": 50,
      "step": 1,
      "default": 8,
      "unit": "px",
      "label": "Image border radius"
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 800,
      "max": 1600,
      "step": 50,
      "default": 1200,
      "unit": "px",
      "label": "Maximum gallery width"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "background-1"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Description text color",
      "default": "#333333"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "4-Image Gallery",
      "category": "Image"
    }
  ]
}
{% endschema %}