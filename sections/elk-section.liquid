<section id="antler-banner" class="antler-banner">
  <div class="antler-banner__content">
    <h2 class="antler-banner__heading">
      Any Home,<br>
      Any Vibe.
    </h2>
    <p class="antler-banner__subtext">
      {{ section.settings.subtext | default: '' }}
    </p>
    {% if section.settings.button_label != blank and section.settings.button_link != blank %}
      <a href="{{ section.settings.button_link }}" class="antler-banner__btn">
        {{ section.settings.button_label | default: 'Shop Antlers' }}
      </a>
    {% endif %}
  </div>

  <div class="antler-banner__image-wrap">
    {% if section.settings.banner_image %}
      {{ section.settings.banner_image
        | image_url: width: 2400
        | image_tag:
          class: 'antler-banner__image',
          loading: 'lazy',
          widths: '600, 900, 1200, 1600, 2400',
          sizes: '75vw'
      }}
    {% endif %}
  </div>
</section>

<style>
  #antler-banner {
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 480px;
    overflow: hidden;
  }

  /* ---- BEIGE CONTENT PANEL (~25%) ---- */
  .antler-banner__content {
    flex: 1 0 25%;
    background-color: #f5f0eb;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    padding: 40px 32px 40px 40px;
    gap: 16px;
    z-index: 1;
  }

  .antler-banner__heading {
    font-size: 28px;
    font-weight: 600;
    line-height: 1.2;
    color: #1a1a1a;
    margin: 0;
  }

  .antler-banner__subtext {
    font-size: 14px;
    line-height: 1.55;
    color: #4a4a4a;
    margin: 0;
  }

  .antler-banner__btn {
    display: inline-block;
    margin-top: 4px;
    padding: 12px 28px;
    background-color: transparent;
    color: #1a1a1a;
    border: 2px solid #1a1a1a;
    font-size: 13px;
    font-weight: 500;
    letter-spacing: 0.5px;
    text-decoration: none;
    border-radius: 4px;
    transition: background-color 0.2s ease, color 0.2s ease;
  }

  .antler-banner__btn:hover {
    background-color: #1a1a1a;
    color: #ffffff;
  }

  /* ---- IMAGE (~75%) ---- */
  .antler-banner__image-wrap {
    flex: 3 0 75%;
    overflow: hidden;
  }

  .antler-banner__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    display: block;
  }

  /* ---- TABLET ---- */
  @media (max-width: 1024px) {
    .antler-banner__content {
      flex: 1 0 30%;
    }
    .antler-banner__image-wrap {
      flex: 1 0 70%;
    }
    #antler-banner {
      height: 400px;
    }
  }

  /* ---- MOBILE ---- */
  @media (max-width: 768px) {
    #antler-banner {
      flex-direction: column;
      height: auto;
    }
    .antler-banner__image-wrap {
      flex: none;
      width: 100%;
      height: 260px;
    }
    .antler-banner__content {
      flex: none;
      width: 100%;
      align-items: center;
      text-align: center;
      padding: 32px 24px;
    }
  }
</style>

{% schema %}
{
  "name": "Antler Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Any Home, Any Vibe"
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Description",
      "default": "Ethically sourced, naturally shed elk antlers â€” each piece is unique, hand-selected for quality and character."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Shop Elk Antlers"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "Antler Banner"
    }
  ]
}
{% endschema %}