<section id="whitetail-banner" class="whitetail-banner">
  <div class="whitetail-banner__image-wrap">
    {% if section.settings.banner_image %}
      {{ section.settings.banner_image
        | image_url: width: 2400
        | image_tag:
          class: 'whitetail-banner__image',
          loading: 'lazy',
          widths: '600, 900, 1200, 1600, 2400',
          sizes: '60vw'
      }}
    {% endif %}
  </div>

  <div class="whitetail-banner__content">
    <h2 class="whitetail-banner__heading">
      {{ section.settings.heading | newline_to_br }}
    </h2>
    <p class="whitetail-banner__subtext">
      {{ section.settings.subtext }}
    </p>
    {% if section.settings.button_label != blank and section.settings.button_link != blank %}
      <a href="{{ section.settings.button_link }}" class="whitetail-banner__btn">
        {{ section.settings.button_label }}
      </a>
    {% endif %}
  </div>
</section>

<style>
  #whitetail-banner {
    position: relative;
    width: 100%;
    height: 520px;
    overflow: hidden;
    display: flex;
    flex-direction: row;
  }

  /* ---- CONTENT PANEL (RIGHT ~40%) ---- */
  .whitetail-banner__content {
    flex: 2 0 40%;
    background-color: #edece7;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    padding: 48px 60px 48px 40px;
    gap: 16px;
    z-index: 1;
  }

  .whitetail-banner__heading {
    font-size: 32px;
    font-weight: 600;
    line-height: 1.25;
    color: #1a1a1a;
    margin: 0;
  }

  .whitetail-banner__subtext {
    font-size: 15px;
    line-height: 1.6;
    color: #4a4a4a;
    margin: 0;
  }

  .whitetail-banner__btn {
    display: inline-block;
    margin-top: 8px;
    padding: 12px 28px;
    background-color: transparent;
    color: #1a1a1a;
    border: 2px solid #1a1a1a;
    font-size: 13px;
    font-weight: 500;
    letter-spacing: 0.5px;
    text-decoration: none;
    border-radius: 4px;
    transition: background-color 0.2s ease, color 0.2s ease;
  }

  .whitetail-banner__btn:hover {
    background-color: #1a1a1a;
    color: #ffffff;
  }

  /* ---- IMAGE (RIGHT ~60%) ---- */
  .whitetail-banner__image-wrap {
    flex: 3 0 60%;
    overflow: hidden;
  }

  .whitetail-banner__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    display: block;
  }

  /* ---- TABLET ---- */
  @media (max-width: 1024px) {
    #whitetail-banner {
      height: 450px;
    }
    .whitetail-banner__content {
      flex: 1 0 35%;
      padding: 40px 32px 40px 40px;
    }
    .whitetail-banner__image-wrap {
      flex: 1 0 65%;
    }
    .whitetail-banner__heading {
      font-size: 26px;
    }
  }

  /* ---- MOBILE ---- */
  @media (max-width: 768px) {
    #whitetail-banner {
      height: auto;
      flex-direction: column;
    }
    .whitetail-banner__image-wrap {
      flex: none;
      width: 100%;
      height: 300px;
    }
    .whitetail-banner__content {
      flex: none;
      width: 100%;
      align-items: center;
      text-align: center;
      padding: 32px 24px;
    }
    .whitetail-banner__heading {
      font-size: 24px;
    }
  }
</style>

{% schema %}
{
  "name": "Whitetail Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner image"
    },
    {
      "type": "textarea",
      "id": "heading",
      "label": "Heading (use Shift+Enter for line breaks)",
      "default": "Minimalist or Maximalist,\nyou decide."
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Description",
      "default": "From subtle accents to statement pieces, find your perfect match."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Shop White-tailed Deer Antlers"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "Whitetail Banner"
    }
  ]
}
{% endschema %}
